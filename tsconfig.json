{
    "compilerOptions": {
        "target": "esnext",
        "lib": ["esnext", "DOM"],
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "types": [
            "node",
            "vite"
        ],
        "strict": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "exclude": [
        "**/dist",
        "**/node_modules"
    ]
}
